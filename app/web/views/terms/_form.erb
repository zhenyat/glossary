<%##############################################################################
#   File:     app/web/views/terms/_form.erb
#   Purpose:  Shared form for new/edit term
#   Author:   ChatGPT (GPT-4.1)
#   Date:     2025-10-28
###############################################################################%>
<div class="row g-3">
  <div class="col-md-4">
    <label class="form-label">Category</label>
    <select class="form-select" name="term[category_id]" required>
      <% @categories.each do |c| %>
        <option value="<%= c.id %>" <%= "selected" if @term.category_id.to_s == c.id.to_s %>><%= h(c.name_en) %></option>
      <% end %>
    </select>
  </div>
  <div class="col-md-4">
    <label class="form-label">EN</label>
    <input class="form-control" type="text" name="term[en]" value="<%= h(@term.en) %>" required>
  </div>
  <div class="col-md-4">
    <label class="form-label">RU</label>
    <input class="form-control" type="text" name="term[ru]" value="<%= h(@term.ru) %>" required>
  </div>

  <div class="col-md-3">
    <label class="form-label">abbr_en</label>
    <input class="form-control" type="text" name="term[abbr_en]" value="<%= h(@term.abbr_en) %>">
  </div>
  <div class="col-md-3">
    <label class="form-label">abbr_ru</label>
    <input class="form-control" type="text" name="term[abbr_ru]" value="<%= h(@term.abbr_ru) %>">
  </div>

  <div class="col-md-6">
    <label class="form-label">descr_en</label>
    <textarea class="form-control" name="term[descr_en]" rows="3"><%= h(@term.descr_en) %></textarea>
  </div>
  <div class="col-md-6">
    <label class="form-label">descr_ru</label>
    <textarea class="form-control" name="term[descr_ru]" rows="3"><%= h(@term.descr_ru) %></textarea>
  </div>

  <% if @error %>
    <div class="col-12">
      <div class="alert alert-danger"><%= h(@error) %></div>
    </div>
  <% end %>

  <div class="col-12 d-flex gap-2">
    <button class="btn btn-primary">Save</button>
    <a class="btn btn-outline-secondary" href="/terms">Cancel</a>
  </div>
</div>
